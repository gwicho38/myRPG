# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_style = tab
indent_size = 2

# JSON files
[*.json]
indent_style = tab
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = tab
indent_size = 2

# CSS files
[*.{css,scss,sass}]
indent_style = tab
indent_size = 2

# Config files
[{package.json,.prettierrc,.babelrc,.eslintrc}]
indent_style = space
indent_size = 2

# Makefiles always use tabs
[Makefile]
indent_style = tab

# Batch files use CRLF
[*.{bat,cmd}]
end_of_line = crlf
